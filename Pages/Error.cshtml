@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5 mb-5">
    <h1 class="display-4 text-danger mb-4">Oops! Something went wrong.</h1>
    <p class="lead mb-3">An error occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a asp-page="/Index" class="btn btn-primary mt-3">Return to Home</a>

    <hr class="my-5" />

    <h5>Development Mode</h5>
    <p class="text-muted">
        Switch to the <strong>Development</strong> environment to see detailed error information.
    </p>
</div>
