    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5 mb-5">
    <h1 class="mb-4">Privacy Policy</h1>
    <p>At MapViewer, your privacy is our priority. We do not collect any personal data.</p>

    <h3>Data Usage</h3>
    <p>We do not store or transmit any location data you enter. The coordinates you input are used solely to display the location on the map within your browser session.</p>

    <h3>Cookies</h3>
    <p>This site does not use cookies or tracking technologies.</p>

    <h3>Third-Party Services</h3>
    <p>We use <a href="https://www.openstreetmap.org/about" target="_blank" rel="noopener">OpenStreetMap</a> for map data, which is publicly available and open source.</p>

    <h3>Contact Us</h3>
    <p>If you have any questions about this privacy policy, please contact us at <a href="mailto:support@mapviewer.com">support@mapviewer.com</a>.</p>
</div>
